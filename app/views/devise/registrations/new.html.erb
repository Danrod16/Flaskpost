<div class="container onboarding">

  <div class="onboarding-header">
    <h1>Sign up</h1>
  </div>

  <form class="simple_form new_user" id="new_user" novalidate="novalidate" action="/users" accept-charset="UTF-8" method="post"><input name="utf8" type="hidden" value="✓"><input type="hidden" name="authenticity_token" value="jVvOuyjVrcgBA6sm3rkQd5on4A7hYXDfp7eyS+x3VqE7OeLPPirFhKshGycxdTuk04W6BcPUsCLBeQZAcVUDKA==">


    <div class="form-inputs">
      <div>
        <div class="form-group email required user_email"><label class="email required font-weight-bold" for="user_email" >Email <abbr title="required"></abbr></label><input class="form-control string email required" autocomplete="email" placeholder="alan.turing@enigma.com" autofocus="autofocus" required="required" aria-required="true" type="email" value="" name="user[email]" id="user_email"></div>
      </div>
      <div>
