<h1>Profiles#new</h1>
<p>Find me in app/views/profiles/new.html.erb</p>

<%= link_to "HERE", profiles_build_create_path, method: :post %>

<p>Let's create your first job hunting deck.</p>

<%= simple_form_for @profile do |f| %>
  <%= f.input :field, label:'Choose your field of interest:' %>
  <%= f.input :job_title, label: 'Define your skill set:' %>
  <%= f.input :experience, label: 'And your skill level', collection: ['Entry', 'Junior', 'Mid', 'Senior'] %>
  <%= f.input :languages, label: 'Select your languages?', collection: ['English', 'Spanish', 'French', 'German'], as: :check_boxes %>
  <%= f.input :locations, label: 'Select your locations', collection: ['Barcelona', 'Madrid', 'Valencia', 'San Sebastian'], as: :check_boxes %>
  <%= f.input :contract_types, label: "Contract type:", collection: ['Full-time', 'Part-time', 'Freelance'], as: :check_boxes  %>
  <%= f.input :salary_min, label: 'Your ideal salary', as: :integer %>
  <%= f.input :description, label: 'Please pitch the job in 80 characters', as: :text %>
<% end %>
