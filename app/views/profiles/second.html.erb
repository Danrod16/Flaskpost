<div class="container onboarding second">

  <div class="progress two">
    <div class="progress-circle-1"> </div>
    <div class="progress-circle-1"> </div>
    <div class="progress-circle-0"> </div>
  </div>

  <div class="onboarding-header">
    <h1 id="page-two-header">A few details...</h1>
  </div>
  <%= simple_form_for @profile, url: wizard_path do |f| %>

    <fieldset class="form-group check_boxes optional profile_languages two">
      <legend class="col-form-label pt-0 font-weight-bold <%= @profile.errors.messages.keys.include?("languages".to_sym)? "error_message" : "" %>">What languages do you speak?</legend>
      <input type="hidden" name="profile[languages][]" value="">

      <div class="category-choices">
        <div class="form-check">
          <% Profile::LANGUAGES.each do |language| %>
            <input
              class="form-check-input check_boxes optional d-none"
              type="checkbox"
              value="<%=language%>"
              name="profile[languages][]"
              id="profile_languages_<%=language%>"
              <%= @profile.languages && @profile.languages.include?(language) ? "checked" : "" %>
            >
            <label
              class="form-check-label collection_check_boxes category-choice <%= @profile.languages && @profile.languages.include?(language) ? "active" : "" %>"
              for="profile_languages_<%=language%>"
            >
              <%=language%>
            </label>
          <% end %>
        </div>
      </div>
    </fieldset>

    <fieldset class="form-group check_boxes optional profile_locations two">
      <legend class="col-form-label pt-0 font-weight-bold <%= @profile.errors.messages.keys.include?("locations".to_sym)? "error_message" : "" %>">Where would you like to work?</legend>
      <input type="hidden" name="profile[locations][]" value="">

      <div class="category-choices">
        <div class="form-check">
          <% Profile::LOCATIONS.each do |location| %>
            <input
              class="form-check-input check_boxes optional d-none"
              type="checkbox"
              value="<%=location%>"
              name="profile[locations][]"
              id="profile_locations_<%=location%>"
              <%= @profile.locations && @profile.locations.include?(location) ? "checked" : "" %>
            >
            <label
              class="form-check-label collection_check_boxes category-choice <%= @profile.locations && @profile.locations.include?(location) ? "active" : "" %>"
              for="profile_locations_<%=location%>"
            >
              <%=location%>
            </label>
          <% end %>
        </div>
      </div>
    </fieldset>

    <fieldset class="form-group check_boxes optional profile_contract_types two">
      <legend class="col-form-label pt-0 font-weight-bold <%= @profile.errors.messages.keys.include?("contract_types".to_sym)? "error_message" : "" %>">Contract type?</legend>
      <input type="hidden" name="profile[contract_types][]" value="">

      <div class="category-choices">
        <div class="form-check">
          <% Profile::CONTRACTS.each do |contract| %>
            <input
              class="form-check-input check_boxes optional d-none"
              type="checkbox"
              value="<%=contract%>"
              name="profile[contract_types][]"
              id="profile_contract_types_<%=contract%>"
              <%= @profile.contract_types && @profile.contract_types.include?(contract) ? "checked" : "" %>
              >
            <label
              class="form-check-label collection_check_boxes category-choice <%= @profile.contract_types && @profile.contract_types.include?(contract) ? "active" : "" %>"
              for="profile_contract_types_<%=contract%>"
            >
              <%=contract%>
            </label>
          <% end %>
        </div>
      </div>
    </fieldset>

    <div class="form-group select required profile_salary_min form-group-valid rangeslider">
      <label class="integer optional font-weight-bold salary-title"
      for="profile_salary_min"
      >
      What's your desired salary?
      </label>
      <input
        class="form-control is-valid multi-range myslider"
        type="range"
        min="1000"
        max="100000"
        value="<%= @profile.salary_min || 50_000 %>"
        step="1000"
        name="profile[salary_min]"
        id="salaryInputId"
        oninput="salaryOutputId.value = salaryInputId.value"
      >
      <output
        name="salaryOutputName"
        id="salaryOutputId"
      >
        <%= @profile.salary_min || 50_000 %>
      </output>
    </div>


    <%= f.submit "NEXT", class: "btn btn-main form-button"%>
  <% end %>

</div>

